<script type="text/javascript">
	$(document).ready(function() {
		$('#searchbutton').click(function(){
			debugger;
			//alert("searchbutton click");
			$("#customerlisttablebody").empty();
			getCustomerDataBySearchBar(1);
		});
	});
	
	function getCustomerDataBySearchBar(page) {
		var param = new Object();
		param.page = page;
		param.perPageNum = 5; /*만약값을셋팅하지 않으면 기본 페이지당 row수 10*/
		
    param.customerName = $("form[name=dataForm]").find("input[name=customerName]").val();
    param.phoneNumber = $("form[name=dataForm]").find("input[name=phoneNumber]").val();
		
		$.ajax({
			method : 'get',
			url : '/customer/findsearchbar',
			data : param, 
			dataType : 'json',
			error : function(xhr, status, error) {
				alert(error);
			},
			success : handleCustomerData
		});
	}
</script>

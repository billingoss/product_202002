	function saveCustomerPopup() {
		debugger;
		if ($('#inputCustomerNamePopup').val() == "") {
			alert("해당 값은 필수 입력입니다.");
			$('#inputCustomerNamePopup').focus();
			false;
		} else if ($('#inputPhoneNumberPopup').val() == "") {
			alert("해당 값은 필수 입력입니다.");
			$('#inputPhoneNumberPopup').focus();
			false;
		} else {
			getCustomer();
		}
	}
	
	function getCustomer(){
		var queryString3 = $("form[name=customerInputFormPopup]").serialize();
		$.ajax({
			url : '/contract/findCustomer',
			method : 'get', 
			data : queryString3,
			error : function(xhr, status, error) {
				alert(error);
			},
			success : function(data){
				if (data.customerNumber != 0){
					alert("기등록된 고객입니다. 수정 후 저장하십시오.");
					$('#customercreatepopuplDialog').modal('hide');
					$("#orderlist").empty();
					$("#productsale").empty();
					$("#orderupload").empty();
					$("#counsel").empty();
					$("#couponusetemplate").empty();
					$("#customerupdate").empty();
					$('#productsale').removeClass('in active');
					$('#customerupdate').addClass('in active');
					$('#tabProductSale').removeClass('active');
					$('#tabCustomerUpdate').addClass('active');
					$("#customerupdate").load("/contract/customerupdate" + "/" + data.customerNumber);
				} else {
					findAddressIdPopUp();
					$('#customercreatepopuplDialog').modal('hide');
				}
			}
		});	
	}
	
	function findAddressIdPopUp() {
		debugger;
		$.ajax({
      url : '/contract/findAddressIdPopUp',
      method : 'get', 
      async : false,
      error : function(xhr, status, error) {
        alert(error);
      },
      success : function(data){
      	//alert(data);
   	    $('#customeraddressPopup').html(data);
   	    //alert($('#inputAddressId').val());
   	    $('#inputCustomerAddressIdPopup').val($('#inputAddressIdPopup').val());
  			saveAddress();
      }
		});
	}
	
	function saveAddress() {
		debugger;
    var queryString = $("form[name=addressInputFormPopup]").serialize();
			//alert("queryString = " + queryString);
	  
		$.ajax({
      url : '/contract/saveAddress',
      data : queryString,
      dataType : 'text',
      type : 'post',
      async : false,
      error : function(xhr, status, error) {
        alert("error = " + error);
      },
      success : function() {
      	//alert("data = " + data);
      	saveCustomer();
      }
		});
	}
	
	function saveCustomer() {
		debugger;
		var queryString2 = $("form[name=customerInputFormPopup]").serialize();
		/*<![CDATA[*/
		queryString2 = queryString2 + '&' + $("form[name=customerInputFormPopup2]").serialize()
		/*]]>*/
		//alert("queryString2 = " + queryString2);
	  
		$.ajax({
      url : '/contract/saveCustomer',
      data : queryString2,
      dataType : 'text',
      type : 'post',
      async : false,
      error : function(xhr, status, error) {
        alert("error = " + error);
      },
      success : function() {
      	alert("신규 고객 생성 완료");
		$('#saveCustomerPopup').attr("disabled", "disabled");
		$('#customercreatepopuplDialog').modal('hide');
        $('#customercreatepopuplDialog .modal-content').empty();
		$("#tabProductSale").click();
      }
		});
	}
	
	
</script>

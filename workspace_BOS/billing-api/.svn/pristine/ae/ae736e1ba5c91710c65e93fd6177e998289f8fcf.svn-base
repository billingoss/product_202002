<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.api.repository.LoginRepository">
    <select id="readUser" parameterType="String" resultType="com.api.model.User">
          select   l.loginid as username
			      ,l.password as password
			      ,e.employeename as name
			      ,e.providernumber
			      ,isAccountNonExpired
			      ,isAccountNonLocked 
			      ,isCredentialsNonExpired 
			      ,isEnabled 
			      ,b.businessname
			      ,b.businessregistrationnumber
			      ,e.adminyn
			      ,(CASE WHEN l.loginid = b.managerid  THEN 'Y'
					      ELSE 'N' END ) as manageryn
			from login l
			    ,employee e
			    ,business b
			    ,provider p
			where l.employeenumber = e.employeenumber
			and   b.businessregistrationnumber = p.businessregistrationnumber
			and   p.providernumber = e.providernumber
			and   l.loginid = #{userName}
			limit 1
     </select>
     <select id="readAuthority" parameterType="String" resultType="String">
          SELECT 'ADMIN' 
     </select>
</mapper>
